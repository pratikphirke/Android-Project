<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/diback"
    tools:context="com.example.hp.annapurnayogna.DayChartActivity"
    android:gravity="center_vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/diback"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/day"
                    android:layout_width="78dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:gravity="top"
                    android:text="  वार:"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <!--<Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5" />-->

                <TextView
                    android:id="@+id/date"
                    android:layout_width="82dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:gravity="top"
                    android:text="दिनांक:"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="337dp"
                android:layout_height="39dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item"
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/diback"
                    android:text="पदार्थ"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/diback"
                    android:text="प्रमाण"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/diback"
                    android:text="किमात"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/diback"
                    android:text="    एकूण"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/poli"
                    android:layout_width="84dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/diback"
                    android:gravity="top"
                    android:text="पोळी"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/poli_qty"
                    android:layout_width="83dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/poli_price"
                    android:layout_width="79dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/poli_amt"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bhaji"
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/diback"
                    android:gravity="top"
                    android:text="भाजी"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/bhaji_qty"
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bhaji_price"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/bhaji_amt"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rice"
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/diback"
                    android:gravity="top"
                    android:text="भात"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/rice_qty"
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rice_price"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/rice_amt"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/dal"
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/diback"
                    android:gravity="top"
                    android:text="वरण"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/daal_qty"
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/daal_price"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/daal_amt"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_add5"
                    android:layout_width="341dp"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:text="Add" />


            </LinearLayout>
