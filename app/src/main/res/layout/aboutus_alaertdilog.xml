<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/aboutusxml"
    android:background="@drawable/diback"
    android:layout_margin="05dp">


    <TextView
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=".....मदत...."
        android:textSize="20sp"
        android:padding="03dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.अॅप्लिकेशन चा वापर (अन्नपूर्णा योजना)"
        android:textSize="17sp"
        android:padding="05dp"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.तुमची वायक्तिक माहिती (नाव,पत्ता,मो.नंबर)"
        android:textSize="17sp"
        android:padding="05dp"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.पदार्थांची किमत(अंदाजे तुमचा प्रमाणे )
  (गरजे नुसार किमतीत बादल करावा)"
        android:textSize="17sp"
        android:padding="05dp"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.रोज प्रमाणे वाया गेलेल्या नोंदींचा तक्ता भरावा "
        android:textSize="17sp"
        android:padding="05dp"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5.रोज वाया गेलेया अन्न ची xls फाइल क्रिएट करा (click->file)(गरजे नुसार)"
        android:textSize="17sp"
        android:padding="05dp"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6.आता पर्यंत वाया गेलेले अन्न ची नोदणी बघण्यासाठी (click-> Daily View)(महिन्या नुसार)"
        android:textSize="17sp"
        android:padding="05dp"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7.आता पर्यंत वाया गेलेले अन्न ची नोदणी (pie-chart) स्वरुपात "
        android:textSize="17sp"
        android:padding="05dp"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8.महिना भर वाया गेलेया अन्न ची xls फाइल क्रिएट करा (click->CreateTotalfile)(शेअर करा)"
        android:textSize="17sp"
        android:padding="05dp"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" धन्यवाद..!! "
        android:textSize="20sp"
        android:padding="05dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/black" />
</LinearLayout>