<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/diback"
    tools:context="com.example.hp.annapurnayogna.MasterRateActivity">


    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="320dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/diback"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/diback"
            android:padding="5dp"
            android:text="अनुक्रमानिका"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/diback"
            android:orientation="horizontal"
            android:padding="4dp">


            <TextView
                android:id="@+id/tv_item"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:text="अन्न पदार्थ"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:text="अंदाजे किमत"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:text=" प्रमान"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_poli"
                android:layout_width="112dp"
                android:layout_height="45dp"
                android:background="@drawable/diback"
                android:text="पोळी"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_poli"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background_normal"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvrate_poli"
                android:layout_width="93dp"
                android:layout_height="45dp"
                android:padding="2dp"
                android:text="  / नग"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bhaji"
                android:layout_width="111dp"
                android:layout_height="45dp"
                android:background="@drawable/diback"
                android:text="भाजी"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_bhaji"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background_normal"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvrate_bhaji"
                android:layout_width="92dp"
                android:layout_height="45dp"
                android:padding="2dp"
                android:text="  / वाटी"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rice"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:background="@drawable/diback"
                android:text="भात"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_rice"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background_normal"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvrate_rice"
                android:layout_width="93dp"
                android:layout_height="45dp"
                android:padding="2dp"
                android:text="  / वाटी"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_daal"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:background="@drawable/diback"
                android:text="वरण"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_daal"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background_normal"
                android:inputType="number"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvrate_daal"
                android:layout_width="93dp"
                android:layout_height="45dp"
                android:padding="2dp"
                android:text="  / वाटी"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </LinearLayout>
        <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_other"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_other"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:inputType="number" />

        <TextView
            android:id="@+id/tvrate_other"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:text="/vati" />

    </LinearLayout>-->


    </LinearLayout>


    <LinearLayout
        android:layout_width="313dp"
        android:layout_height="102dp"
        android:background="@drawable/diback"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="Add" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="119dp"
            android:layout_height="66dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="UPDATE" />

        <Button
            android:id="@+id/btn_clr"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="Clear" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



       <!-- <Button
            android:id="@+id/btn_createfile"
            android:layout_width="109dp"
            android:layout_height="62dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="CreateFile" />
-->
    </LinearLayout>
</LinearLayout>
